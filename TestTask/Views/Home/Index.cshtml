</div>
<body>
    <form>
        <p>
            <input type="checkbox" checked = "@ViewBag.SortByMessageID" value="true" name="MessageID" />  Sort By MessageID
        </p>
        <p>
            <input type="checkbox" checked = "@ViewBag.SortByLastChangedOn" value="true" name="LastChangedOn" />  Sort By LastChangedOn
        </p>
        <p>
            <button class="btn btn-default" type="submit" asp-controller="Home" asp-action="Check">Send</button>
        </p>
    </form>
</body>

    <div class="row">

        <table class="table">
            <thead>
                <tr>
                    <th>
                        Number
                    </th>
                    <th>
                        Message
                    </th>
                    <th>
                        UserName
                    </th>
                    <th>
                        LastChangedOn
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MessageID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Message)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.User.UserFullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastChangedOn)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div>
            <body>
                <form>
                    <p><input class="btn btn-default" type="text" name="userName" placeholder="Whrite your name" size="18" maxlength="11"/></p>
                    <p><textarea name="message" id="comment" placeholder="Whrite your message" maxlength="200"></textarea> </p>
                    <p>
                        <button class="btn btn-default" type="submit" asp-controller="Home" asp-action="CreateMessage">Send</button>
                        <button class="btn btn-default" type="reset">Canсel</button>
                    </p>
                </form>
            </body>
            
        </div>
    </div>

